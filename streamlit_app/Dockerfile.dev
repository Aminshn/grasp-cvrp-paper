FROM python:3.9-slim-bullseye

USER root

RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        curl \
        gnupg2 \
        unixodbc \
        unixodbc-dev \
    && curl -fsSL https://packages.microsoft.com/keys/microsoft.asc \
        | gpg --dearmor -o /etc/apt/trusted.gpg.d/microsoft.gpg \
    && echo "deb [arch=amd64] https://packages.microsoft.com/debian/11/prod bullseye main" \
        > /etc/apt/sources.list.d/mssql-products.list \
    && apt-get update \
    && ACCEPT_EULA=Y apt-get install -y --no-install-recommends msodbcsql18 \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY cvrp_streamlit/ /app/cvrp_streamlit/
COPY streamlit_app/ /app/streamlit_app/
COPY benchmarks/ /app/benchmarks/

ENV PYTHONPATH="${PYTHONPATH}:/app"

EXPOSE 8502

CMD ["streamlit", "run", "streamlit_app/app.py", "--server.port=8502", "--server.address=0.0.0.0"]